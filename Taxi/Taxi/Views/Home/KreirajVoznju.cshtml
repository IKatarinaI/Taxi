@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>
        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
    </style>
</head>
<body>
    <div>
        <form action="/Home/KreirajVozaca" method="post" class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin">
