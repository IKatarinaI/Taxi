
@{
    ViewBag.Title = "DodajVozaca";
}

<h2>DodajVozaca</h2>

<html>
<head>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body style="width:auto; height:auto; background-image:url('../taxi-service.png'); background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;">
        <div style="text-align:center" ?>
            <form action="/Projekat/DodajVozaca">
                <table>
                    <tr></tr>
                    <tr>
                        <td>Ime:</td>
                        <td><input type="text" name="ime" required /></td>
                    </tr>
                    <tr>
                        <td>Prezime:</td>
                        <td><input type="text" name="prezime" required/></td>
                    </tr>
                    <tr>
                        <td>Pol:</td>
                        <td>
                            <select name="pol" required>
                                <option value="muski">Muski</option>
                                <option value="zenski">Zenski</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Korisnicko ime:</td>
                        <td><input type="text" name="korisnicko_ime" required/></td>
                    </tr>
                    <tr>
                        <td>Jmbg:</td>
                        <td><input type="text" name="jmbg" required/></td>
                    </tr>

                    <tr>
                        <td>Lozinka:</td>
                        <td><input type="text" name="lozinka" required /></td>
                    </tr>
                    <tr>
                        <td>E-mail:</td>
                        <td><input type="text" name="email" required/></td>
                    </tr>
                    <tr>
                        <td>Broj telefona:</td>
                        <td><input type="text" name="kontakt_broj" required/></td>
                    </tr>
                    <tr>
                        <td>Ulica:</td>
                        <td><input type="text" name="ulica" required/></td>
                    </tr>
                    <tr>
                        <td>Broj:</td>
                        <td><input type="text" name="broj" required min="1"/></td>
                    </tr>
                    <tr>
                        <td>Mesto:</td>
                        <td><input type="text" name="mesto" required/></td>
                    </tr>
                    <tr>
                        <td>Pozivni broj:</td>
                        <td><input type="text" name="postanski_broj" required min="10000"/></td>
                    </tr>
                    <tr>
                        <td>Godište automobila:</td>
                        <td>
                            <input type="text" name="godiste" required min="1800"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Registraciona oznaka:
                        </td>
                        <td>
                            <input type="text" name="reg" required/>
                        </td>
                    </tr>
                    <tr>
                        <td>Taxi broj vozila:</td>
                        <td>
                            <input type="text" name="taxiBroj" required/>
                        </td>
                    </tr>
                    <tr>
                        <td>Tip vozila:</td>
                        <td>
                            <select name="tip" required>
                                <option value="kombi">Kombi</option>
                                <option value="putnicki">Putnicki</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td align="center"><input type="submit" value="Sačuvaj" /></td>
                    </tr>
                </table>
            </form>
            <button onclick="goBack()">Vrati se na profil</button>
        </div>
    </body>
</html>