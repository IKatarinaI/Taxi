@model WebAPI.Models.Voznja
@{
    ViewBag.Title = "DodeljivanjeVozaca";
}

<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body style="width:auto; height:auto; background-image:url('../taxi-service.png'); background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;">
    <div style="text-align:center">
        <h1>Odaberite nekog vozača iz liste slobodnih vozača sa traženim tipom automobila</h1>
        <form action="/Projekat/Dodeli">
            <select name="vozac">
                @foreach (WebAPI.Models.Vozac v in WebAPI.Models.PostojeciKorisnici.ListaVozaca)
                {
                    if (v.Automobil.Tip == Model.TipAutomobila && v.Zauzet == false)
                    {
                        <option value="@v.Korisnicko_ime">@v.Ime</option>
                    }
                }
            </select>
            <input type="hidden" value="@Model.Datum_i_vreme" name="datum" />
            <input type="hidden" value="@Model.Musterija.Korisnicko_ime" name="musterija" />
            <input type="submit" value="Dodeli" />
            @{
                Model.StatusVoznje = WebAPI.Models.StatusVoznje.Obradjena;
            }
        </form>
    </div>
</body>
</html>