        <h1>Uspešno ste otkazali vožnju</h1>
        <form action="/Projekat/OstaviKomentar">
            <textarea name="komentar" rows="5" cols="50">
                
            </textarea>
            <input type="hidden" name="datum" value="@Model.Datum_i_vreme" />
