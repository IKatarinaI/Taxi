@model WebAPI.Models.Voznja
@{
    ViewBag.Title = "DispecerZatrazioVoznju";
}
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body style="width:auto; height:auto; background-image:url('../taxi-service.png'); background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;">
    <div style="text-align:center">
        <h1>Uspešno ste zatražili vožnju na adresu: @Model.LokacijaNaKojuTaksiDolazi.Adresa.Ulica @Model.LokacijaNaKojuTaksiDolazi.Adresa.Broj, @Model.LokacijaNaKojuTaksiDolazi.Adresa.Mesto @Model.LokacijaNaKojuTaksiDolazi.Adresa.PostanskiBroj </h1>
        @if (Model.Musterija.Korisnicko_ime != "")
        {
            <form action="/Projekat/VratiProfilMusterija">
                <input type="submit" value="Vrati se na profil" />
            </form>
        }
        else
        {
            <form action="/Projekat/VratiProfilDisp">
                <input type="submit" value="Vrati se na profil" />
            </form>
        }
    </div>
</body>
</html>