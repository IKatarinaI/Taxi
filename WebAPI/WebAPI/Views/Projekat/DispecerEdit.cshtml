@model WebAPI.Models.Dispecer
@{
    ViewBag.Title = "DispecerEdit";
}

<html>
<head>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
<body style="width:auto; height:auto; background-image:url('../taxi-service.png'); background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;">
    <div style="text-align:center">
        <form action="/Projekat/IzmeniPodatkeDispecer">
            <table>
                <tr>
                    <td>Ime:</td>
                    <td><input type="text" value="@Model.Ime" name="ime" /></td>
                </tr>
                <tr>
                    <td>Prezime:</td>
                    <td><input type="text" value="@Model.Prezime" name="prezime" /></td>
                </tr>
                <tr>
                    <td>Jmbg:</td>
                    <td><input type="text" value="@Model.Jmbg" name="jmbg" /></td>
                </tr>
                <tr>
                    <td>Pol:</td>
                    <td>
                        <select name="pol">
                            @if (Model.Pol == WebAPI.Models.Pol.Muski)
                            {
                                <option value="Muski" selected="selected">Muski</option>
                                <option value="Zenski">Zenski</option>
                            }
                            else if (Model.Pol == WebAPI.Models.Pol.Zenski)
                            {
                                <option value="Muski">Muski</option>
                                <option value="Zenski" selected="selected">Zenski</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Korisničko ime:</td>
                    <td><input type="text" readonly="readonly" value="@Model.Korisnicko_ime" name="korisnicko" /></td>
                </tr>
                <tr>
                    <td>Lozinka:</td>
                    <td><input type="text" value="@Model.Lozinka" name="lozinka" /></td>
                </tr>
                <tr>
                    <td>E-Mail:</td>
                    <td><input type="text" value="@Model.Email" name="mail" /></td>
                </tr>
                <tr>
                    <td>Broj telefona:</td>
                    <td><input type="text" value="@Model.Kontakt_telefon" name="broj" /></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Sačuvaj" /></td>
                </tr>
            </table>
        </form>
        <button onclick="goBack()">Vrati se na profil</button>
        </div>
</body>
</html>