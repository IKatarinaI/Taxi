@model WebAPI.Models.Voznja
@{
    ViewBag.Title = "PrikazKomentara";
}

<html>
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</head>
<body style="width:auto; height:auto; background-image:url('../taxi-service.png'); background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 50%;">
    <table class="table"  align="center" style="background-color:aliceblue; border-radius:25px; width:auto; height:auto; padding-left:10px; padding-top:20px">
            <tr>
                <td>Datum i vreme porudžbine</td>
                <td>Početna lokacija</td>
                <td>Željeni tip automobila</td>
                <td>Mušterija</td>
                <td>Odredište</td>
                <td>Dispečer</td>
                <td>Vozač</td>
                <td>Iznos</td>
                <td>Komentar</td>
                <td>Status vožnje</td>
            </tr>
            <tr>
                <td>@Model.Datum_i_vreme.ToString()</td>
                <td>@Model.LokacijaNaKojuTaksiDolazi.Adresa.Ulica @Model.LokacijaNaKojuTaksiDolazi.Adresa.Broj @Model.LokacijaNaKojuTaksiDolazi.Adresa.Mesto</td>
                <td>@Model.TipAutomobila.ToString()</td>
                <td>@Model.Musterija.Ime @Model.Musterija.Prezime</td>
                <td>@Model.Odrediste.Adresa.Ulica @Model.Odrediste.Adresa.Broj,@Model.Odrediste.Adresa.Mesto @Model.Odrediste.Adresa.PostanskiBroj</td>
                <td>@Model.Dispecer.Ime @Model.Dispecer.Prezime</td>
                <td>@Model.Vozac.Ime @Model.Vozac.Prezime</td>
                <td>@Model.Iznos</td>
                <td>@Model.Komentar.Korisnik.Korisnicko_ime: @Model.Komentar.Opis.<br />Ocena: @Model.Komentar.OcenaVoznje<br />Datum: @Model.Komentar.DatumObjave.ToString()</td>
                <td>@Model.StatusVoznje</td>
            </tr>
        </table>
        </div>
        <button onclick="goBack()">Vrati se nazad</button>
</body>
</html>